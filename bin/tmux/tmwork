#!/bin/sh

# Set Session Name
SESSION="Work"
SESSIONEXISTS=$(tmux list-sessions | grep $SESSION)

# Only create tmux session if it doesn't already exist
if [ "$SESSIONEXISTS" = "" ]
then

    # # set up tmux
    # tmux start-server

    # Start New Session with our name
    tmux new-session -d -s $SESSION

    # Name first Pane and start zsh
    tmux rename-window -t 1 'Main'
    tmux send-keys -t 'Main' 'zsh' C-m 'cd ~/dotfiles' C-m 'clear' C-m

    # # emacs
    # tmux new-window -t $SESSION:2 -n 'Emacs'
    # tmux send-keys -t 'Emacs' "zsh" C-m 'cd ~/dotfiles' C-m 'clear' C-m
    # # tmux send-keys -t 'Emacs' "zsh" C-m 'cd ~/dotfiles' C-m 'clear' C-m 'env TERM=xterm-256color LC_CTYPE=zh_CN.UTF-8 emacs -nw' C-m
    # # tmux send-keys -t 'Emacs' "zsh" C-m 'cd ~/dotfiles' C-m 'clear' C-m runemacs C-m

    # Create and setup pane for doc
    tmux new-window -t $SESSION:2 -n 'Doc'
    tmux send-keys -t 'Doc' 'zsh' C-m 'cd ~/doc' C-m 'clear' C-m

    # Setup an additional shell
    tmux new-window -t $SESSION:3 -n 'WorkTool'
    tmux send-keys -t 'WorkTool' "zsh" C-m 'cd ~/workspace/work-tools/' C-m 'clear' C-m

    # # DB
    # tmux new-window -t $SESSION:3 -n 'DB'
    # tmux send-keys -t 'DB' "zsh" C-m 'clear' C-m

fi

# Attach Session, on the Main window
tmux attach-session -t $SESSION:1
